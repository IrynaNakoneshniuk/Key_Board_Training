                        </Button>
                        <Button Grid.Column="11" Grid.Row="0" x:Name="OemMinus"
                              Style="{StaticResource ButtonStyle}">
                            <TextBlock
                                Text="-"/>
                        </Button>
                        <Button Grid.Column="12" Grid.Row="0" x:Name="OemPlus"
                              Style="{StaticResource ButtonStyle}">
                            <TextBlock
                                Text="="/>
                        </Button>
                        <Button Grid.Column="13" Grid.ColumnSpan="2" Grid.Row="0" x:Name="Back"
                               Style="{StaticResource ButtonStyle}">
