                    </Grid>
                </materialDesign:Card>
                <StackPanel Grid.Row="1"  Opacity="0.8" Margin="55 0 55 0" Background="#212121" Orientation="Horizontal" >
                    <TextBlock x:Name="textForTrainning"  TextWrapping="Wrap"  FontSize="15"
                      Foreground="AntiqueWhite" >
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="0"  Opacity="0.8" Margin="55 20 55 20" Background="#212121" Orientation="Horizontal" >
                    <Label x:Name ="lableSpeed" HorizontalAlignment="Center" Margin="0 0 0 0"  Foreground="AntiqueWhite" FontSize="15">
                    </Label>
                    <Label  x:Name="lableFailse" HorizontalAlignment="Center" Margin="100 0 0 0"  Foreground="AntiqueWhite" FontSize="14">
                    </Label>
                    <Label Grid.Row="0" HorizontalAlignment="Center" Margin="100 0 0 0"  Foreground="AntiqueWhite" FontSize="14">
                        Difficulty
                    </Label>
                    <Slider x:Name="sliderDifficulty"  VerticalAlignment="Top" Margin="10 0 0 0"  Orientation="Horizontal" Width="200"
                     Minimum="0" Foreground="#ad97c5"
                    Maximum="200"/>
                    <Button x:Name="StartButton" Content="Start" Margin="50 0 0 15" Width="120" Height="25" Style="{StaticResource ButtonStyle}"
                            Click="StartButton_Click"/>
                    <Button x:Name="StopButton" Content="Stop" Margin="5 0 0 15" Width="120" Height="25" Style="{StaticResource ButtonStyle}"
                            Click="StopButton_Click" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Window>
